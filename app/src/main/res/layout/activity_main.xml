<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="25dp"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Ipadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="IP Address"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/Ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="120dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:ems="20"
        android:hint="Enter IP Address " />


    <TextView
        android:id="@+id/subnetadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ip"
        android:layout_alignStart="@id/Ipadd"
        android:layout_alignLeft="@id/Ipadd"
        android:layout_marginStart="-12dp"
        android:layout_marginLeft="-12dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Subnet Address"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/Subnet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Ip"
        android:layout_alignStart="@id/Ip"
        android:layout_alignLeft="@id/Ip"
        android:layout_marginTop="60dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:ems="20"
        android:hint="Enter Subnet Address " />


    <TextView
        android:id="@+id/resultexp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Subnet"
        android:layout_alignStart="@id/Ipadd"
        android:layout_alignLeft="@id/Ipadd"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Result"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/result"
        android:layout_below="@+id/Subnet"
        android:layout_alignLeft="@id/Subnet"
        android:layout_alignStart="@id/Subnet"
        android:layout_marginTop="60dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:hint="Result"/>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignLeft="@id/result"
       android:layout_alignStart="@id/result"
       android:layout_below="@+id/result"
       android:layout_marginRight="25dp"
       android:gravity="center_horizontal"
       android:layout_marginTop="60dp">


       <Button
           android:id="@+id/NetworkAddress"
           android:layout_width="0.0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1.0"
           android:background="@color/black"
           android:text="Network Adress"
           android:textColor="@color/white"
           android:textStyle="bold" />


       <Button
           android:layout_width="0.0dp"
           android:layout_height="wrap_content"
           android:id="@+id/CIDR"
           android:text="CIDR Notation"
           android:layout_weight="1.0"
           android:textStyle="bold"
           android:textColor="@color/white"
           android:background="@color/black"
           />

   </LinearLayout>
</RelativeLayout>